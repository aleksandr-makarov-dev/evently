{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=evently.postgres;Port=5432;Database=evently;Username=postgres;Password=postgres"
  },
  "SmtpOptions": {
    "Host": "localhost",
    "Port": 1025,
    "UseSsl": false,
    "Username": "",
    "Password": "",
    "FromAddress": "no-reply@evently.com"
  },
  "JwtOptions": {
    "Key": "your-secret-key-here-that-should-also-be-fairly-long",
    "Issuer": "localhost",
    "Audience": "localhost",
    "ExpiresInMinutes": 30,
    "RefreshTokenExpiresInDays": 7
  }
}
